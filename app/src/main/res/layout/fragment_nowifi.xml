<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">

    <ImageView
        android:id="@+id/noWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="424dp"
        android:src="@drawable/icons8_without_internet_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNoWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nettverk utilgjengelig"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noWifi" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Denne appen trenger nettverk\nfor å fungere som ønsket\nog ha pålitelig informasjon.\n"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNoWifi" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Forsøk å rette opp i nettverksfeilen for å gå videre"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>